msg = "Please input your age: "
active = True
while active:
    age = input(msg)
    if age != 'quit':
        age = int(age)
        if age < 3:
            price = 0
        elif age < 12:
            price = 10
        else:
            price = 15
        print("Your admission cost is $" + str(price) + ".\n")
    else:
        active = False
